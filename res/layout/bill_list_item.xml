<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/dateNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff647a97"
        android:visibility="gone" >

        <TextView
            android:id="@+id/billDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textColor="#ffffffff"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateNav" >

        <ImageView
            android:id="@+id/billIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:src="@drawable/payout_small_icon" />

        <TextView
            android:id="@+id/billName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/billIcon"
            android:ellipsize="marquee"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/billUsersAndType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/billName"
            android:layout_toRightOf="@id/billIcon"
            android:textColor="#ff666666" />
    </RelativeLayout>

</RelativeLayout>